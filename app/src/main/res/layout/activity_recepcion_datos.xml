<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRecepcionDatos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fototop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ufg_2">
    </ImageView>

    <TextView
        android:id="@+id/tituloufg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universidad Francisco Gavidia"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:layout_below="@id/fototop">

    </TextView>

    <TextView
        android:id="@+id/subtituloufg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resgitro de nuevo estudiante"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tituloufg">

    </TextView>

        <TextView
            android:id="@+id/datos_ingresados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Los datos ingresados son:"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/subtituloufg">
        </TextView>

    <TextView
        android:id="@+id/lbl_nombres_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tituloufg">
    </TextView>


        <TextView
            android:id="@+id/lbl_apellidos_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/lbl_nombres_result">
        </TextView>


        <TextView
            android:id="@+id/lbl_email_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/lbl_apellidos_result">
        </TextView>

        <Button
            android:id="@+id/btn_salir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALIR"
            android:layout_marginTop="20dp"

            android:layout_below="@id/lbl_email_result"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>